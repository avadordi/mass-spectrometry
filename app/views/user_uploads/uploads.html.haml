-#  This file is app/views/user_uploads/uploads.html.haml
-#  To disable buttons, :disabled => 'true'

%h1 Uploaded Files

%div{:id => 'center-parent'}
  %div{:class => 'card', :id => 'center'}
    %div{:id => 'content'}
      %table{width: "100%"}
        %thead
          %tr
            %th Data
            %th Params
            %th Results
            %th Submission Date
        %tbody
          - @results.each do |result|
          - data = result.get_mass_data()
          - params = result.get_mass_params()
            %tr
              %td= if data then link_to(data.get_title(), result.get_url(data)) else "Upload" end
              %td= if params then link_to(params.get_title(), result.get_url(params)) else "Upload" end
              %td= if !result.s3id then "Waiting..." else link_to(result.s3id, result.get_url(result)) end
              %td= result.created_at()

